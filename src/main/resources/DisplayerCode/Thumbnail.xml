  <content>{{include reference="DisplayerCode.DisplayerTools"/}}

{{velocity}}
#set($discard = $xwiki.ssx.use('DisplayerCode.Thumbnail'))

{{html wiki="true"}}
&lt;div class='row'&gt;
  #set($linkLabel = '')
  #if(${additionalDataMap.link-label} != '')
    #set($linkLabel = ${additionalDataMap.link-label})
  #end
  #foreach($document in $blockDisplayerDocList)
    #setDataMap($document $blockDisplayerDocClass $blockDisplayerFields)
    ##START## Propper display of the items on each line
    #if(($velocityCount - 1) % 2 == 0 &amp;&amp; $velocityCount != 1)
      &lt;div class="clearfix visible-md-block visible-sm-block visible-lg-block"&gt;&lt;/div&gt;
    #end
    ##END## 
    #if($!{dataMap.image} != '')
      #set($urlThumbnailLogo = $document.getAttachmentURL($dataMap.image, 'download'))
    #end
    &lt;div class="col-xs-12 col-md-6 row totemHeaderRow thumbdisplayer"&gt;
      &lt;div class="col-xs-2 col-md-3 display-table thumbimgContainer"&gt;
        &lt;img class="thumbImage" src="$!{urlThumbnailLogo}" alt="Responsive image"&gt;
      &lt;/div&gt;#*
    *#&lt;div class="col-xs-10 col-md-9 display-table vcenter thumbText"&gt;
        &lt;h2&gt;
          $dataMap.title
        &lt;/h2&gt;
  	  &lt;div class="thumbDescription"&gt;
  	    $dataMap.description
  	  &lt;/div&gt;
          ##for the url to work properly
          ##the wiki property from the html macro needs to be false
          #if(${linkLabel} != '')
  	    {{html}}
  	      &lt;div class="thumbLink"&gt;
  	        &lt;a href='$!{escapetool.xml($dataMap.url)}'&gt;
                  &lt;span class="fa fa-plus-circle"&gt; &lt;/span&gt;
                  ${linkLabel}
                &lt;/a&gt;
  	      &lt;/div&gt; 
  	    {{/html}}
          #end
      &lt;/div&gt;
    &lt;/div&gt;
  #end
&lt;/div&gt;
{{/html}}
{{/velocity}}</content>
