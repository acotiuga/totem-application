  <content>{{include reference="DisplayerCode.DisplayerTools"/}}

{{velocity}}
#set($discard = $xwiki.ssx.use('DisplayerCode.Blindfold'))

{{html wiki="true"}}
#foreach($document in $blockDisplayerDocList)
  #setDataMap($document $blockDisplayerDocClass $blockDisplayerFields)
  #set($urlLogo = '')
  #if($!{dataMap.image} != '')
    #set($urlLogo = $document.getAttachmentURL($dataMap.image, 'download'))
  #end
  &lt;div class="row blindfoldRow blind"&gt;
    &lt;div class="col-xs-12 col-md-10 display-table vcenter"&gt;
      &lt;div class="hidden-xs col-md-12 hLine"&gt;
      ----
      &lt;/div&gt;
      &lt;div class="blindfoldTitle"&gt;
        $dataMap.title
      &lt;/div&gt;
      &lt;div class="blindfoldDescription"&gt;
        $dataMap.description
      &lt;/div&gt;
      &lt;div class="hidden-xs col-md-12 hLine"&gt;
      ----
      &lt;/div&gt;
    &lt;/div&gt;#* This comments prevent bootstrap columns from breaking by inserting spaces
  *#&lt;div class="hidden-xs hidden-sm col-md-2 display-table vcenter blindImgCont"&gt;
      &lt;img src="$!{urlLogo}" alt=""&gt;
    &lt;/div&gt;
  &lt;/div&gt;
#end
{{/html}}
{{/velocity}}</content>
