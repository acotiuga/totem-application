  <content>{{include reference="DisplayerCode.DisplayerTools"/}}

{{velocity}}
#set($discard = $xwiki.ssx.use('DisplayerCode.ImageRightDisplayer'))

{{html wiki="true"}}
#foreach($document in $blockDisplayerDocList)
  #setDataMap($document $blockDisplayerDocClass $blockDisplayerFields)
  #set($urlLogoRight = '')
  #if($!{dataMap.image} != '')
    #set($urlLogoRight = $document.getAttachmentURL($dataMap.image, 'download'))
  #end
  &lt;div class="row totemHeaderRow rightimagedisplayer"&gt;
    &lt;div class="col-xs-12 col-md-8 display-table vcenter"&gt;
      &lt;h2&gt;
        $dataMap.title
      &lt;/h2&gt;
      &lt;div class="col-xs-12 hidden-md hidden-lg display-table vcenter imgContainer"&gt;
        #if($urlLogoRight != '')
          &lt;img class="rightSideIm/age" src="$!{urlLogoRight}" alt=""&gt;
        #end
      &lt;/div&gt;
      &lt;div&gt;
        $dataMap.description
      &lt;/div&gt;
      {{html}}
        &lt;div class="imgRightLink"&gt;
          &lt;a href='$!{escapetool.xml($dataMap.url)}'&gt;
            &lt;span class="fa fa-plus-circle"&gt; &lt;/span&gt;
            More info
          &lt;/a&gt;
        &lt;/div&gt; 
      {{/html}}
    &lt;/div&gt;#* This comments prevent bootstrap columns from breaking by inserting spaces
  *#&lt;div class="hidden-xs hidden-sm col-md-4 col-lg-4 display-table vcenter imgContainer"&gt;
      &lt;img class="rightSideImage" src="$!{urlLogoRight}" alt="Responsive image"&gt;
    &lt;/div&gt;
  &lt;/div&gt;
#end
{{/html}}
{{/velocity}}</content>
