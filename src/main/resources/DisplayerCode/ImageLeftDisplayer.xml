  <content>{{include reference="DisplayerCode.DisplayerTools"/}}

{{velocity}}
#set($discard = $xwiki.ssx.use('DisplayerCode.ImageLeftDisplayer'))

{{html wiki="true"}}
#set($linkLabel = '')
#if("$!{additionalDataMap.link-label}" != '')
  #set($linkLabel = ${additionalDataMap.link-label})
#end
#foreach($document in $blockDisplayerDocList)
  #setDataMap($document $blockDisplayerDocClass $blockDisplayerFields)
  #set($urlLogo = '')
  #if("$!{dataMap.image}" != '')
    #set($urlLogo = $document.getAttachmentURL($dataMap.image, 'download'))
  #end
  &lt;div class="row totemHeaderRow leftimagedisplayer"&gt;
    &lt;div class="col-xs-12 col-md-8 display-table vcenter hidden-md hidden-lg"&gt;
      &lt;h2&gt;
        $dataMap.title
      &lt;/h2&gt;
    &lt;/div&gt;
    &lt;div class="col-xs-12 col-md-4 display-table vcenter imgContainer"&gt;
      #if("$!{urlLogo}" != '')
        &lt;img class="leftSideImage" src="$!{urlLogo}" alt=""&gt;
      #end
    &lt;/div&gt;#* This comments prevent bootstrap columns from breaking by inserting spaces
  *#&lt;div class="col-xs-12 col-md-8 display-table vcenter"&gt;
      &lt;h2 class='hidden-xs hidden-sm '&gt;
        $dataMap.title
      &lt;/h2&gt;
      &lt;div&gt;
        $dataMap.description
      &lt;/div&gt;
      #if("$!{linkLabel}" != '')
        {{html}}
          &lt;div class="imgLeftLink"&gt;
            &lt;a href='$!{escapetool.xml($dataMap.url)}'&gt;
              &lt;span class="fa fa-plus-circle"&gt; &lt;/span&gt;
              $!{linkLabel}
            &lt;/a&gt;
          &lt;/div&gt; 
      {{/html}}
      #end
    &lt;/div&gt;
  &lt;/div&gt;
#end
{{/html}}
{{/velocity}}</content>
