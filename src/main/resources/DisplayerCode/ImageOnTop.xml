  <content>{{include reference="DisplayerCode.DisplayerTools"/}}

{{velocity}}
#set($discard = $xwiki.ssx.use('DisplayerCode.ImageOnTop'))

{{html wiki="true"}}
&lt;div class="row"&gt;
  #set($columns = 3)
  #set($columnsParam = 0)
  #if(${totemBlock.imageontop_size} != '')
    #set($columnsParam = $columnsParam.parseInt(${totemBlock.imageontop_size}))
    #if(12 % ${columnsParam} == 0)
      #set($columns = 12 / $columnsParam)
    #end
  #end
  #foreach($document in $blockDisplayerDocList)
    #set($urlTopLogo = '')
    #setDataMap($document $blockDisplayerDocClass $blockDisplayerFields)
    ##START##Inserted clearfix div for proper display
    ##Every $columnsParam + 1 element will be at the beginign of a new line
     #if(($velocityCount - 1) % $!{columnsParam} == 0 &amp;&amp; $velocityCount != 1)
      &lt;div class="clearfix"&gt;&lt;/div&gt;
    #end
    ##END##
    #if($!{dataMap.image} != '')
      #set($urlTopLogo = $document.getAttachmentURL($dataMap.image, 'download'))
    #end
    &lt;div class="col-xs-12 col-sm-4 col-md-${columns} row topRow topdisplayer"&gt;
      &lt;div class="col-md-12 display-table vcenter center topimgContainer"&gt;
        &lt;h2&gt;
          {{html}}
            &lt;a href='$!{escapetool.xml($dataMap.url)}'&gt;
              $dataMap.title
            &lt;/a&gt;
          {{/html}}
        &lt;/h2&gt;
        #if($urlTopLogo != '')
          {{html}}  
            &lt;a href='$!{escapetool.xml($dataMap.url)}'&gt;
              &lt;img class="topImage" src="$!{urlTopLogo}" alt=""&gt;
            &lt;/a&gt;
          {{/html}}
        #end
      &lt;/div&gt;#* This comments prevent bootstrap columns from breaking by inserting spaces
    *#&lt;div class="col-md-12 display-table topdContainer vcenter"&gt;
        {{html}}
          &lt;a href='$!{escapetool.xml($dataMap.url)}' class="overLink hidden-md hidden-lg"&gt;&lt;/a&gt;
          &lt;div class="topDescription"&gt;
            $dataMap.description
          &lt;/div&gt;
        {{/html}}
        ##for the url to work properly, the wiki property from the html macro needs to be false
        {{html}}
          &lt;div class="imgTopLink"&gt;
            &lt;a href='$!{escapetool.xml($dataMap.url)}'&gt;
              &lt;span class="fa fa-plus-circle"&gt; &lt;/span&gt;
              More info
            &lt;/a&gt;
          &lt;/div&gt; 
        {{/html}}
      &lt;/div&gt;
    &lt;/div&gt;
  #end
&lt;/div&gt;
{{/html}}
{{/velocity}}</content>
