    <property>
      <code>require(['jquery'], function ($) {
  $( document ).ready(function() {
    var ids = $('.newLineDisplayer').map(function () {
    return this.id;
    }).get();
    $.each(ids, function( index, value ) {
      var blockWidth = "$escapetool.javascript($request.getParameter('param'))";
      var blockId = "#totemBlock_" + value;
      var lastheight = $(blockId).prev().outerHeight();
      var blockHeight = $('.newLineDisplayer').css('height');

      if("blockWidth" != "" &amp;&amp; blockHeight == "0px"){
        $(blockId).css({"padding": "0", "min-height": "0", "height": lastheight});
        //keep edit buttons on top even when height of the block is 0
        $(blockId).find(".editactions").css({"position": "relative", "z-index":100});
        $(blockId).next().css("clear", "left");
        //account for the off pixel on different resolutions and browsers
        $(blockId).prev().css( "height", lastheight );
      }else{
        $(blockId).css({"padding": "0", "min-height": "0"});
      }
    });
  });
});  </code>
